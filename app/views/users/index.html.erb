<div class="flat_area grid_16">
	<h2><%= @title %></h2>

	<div class="box grid_16 single_datatable">
		<div id="dt1" class="no_margin">
			<table class=" datatable">
				<thead>
					<tr>
						<th>Name</th>
						<th>Username</th>
						<th>Email</th>
						<th>Type</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
    					<td><%= user.name %></td>
    					<td><%= user.username %></td>
    					<td><%= user.email %></td>
    					<td><%= user.role_name %></td>
    					<td><%= link_to 'Edit', edit_user_path(user) %></td>
    					<td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="flat_area grid_16">
	<div class="align_right"><p><h2><%= link_to 'New User', new_user_path %></h2></p></div>
</div>
